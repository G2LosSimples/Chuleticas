         <label for="marca">Marca</label>
         <input name="marca"type="text" value="{{this.marca}}">

         <label for="modelo">Modelo</label>
         <input name="modelo"type="text" value="{{this.modelo}}">

         <label for="color">Color</label>
         <input name="color"type="text" value="{{this.color}}">

         <label for="anio">Año</label>
         <input name="anio"type="text" value="{{this.anio}}">

         <label for="combustible">Combustible</label>
         <input name="combustible"type="text" value="{{this.combustible}}">

         <label for="transmision">Transmisión</label>
